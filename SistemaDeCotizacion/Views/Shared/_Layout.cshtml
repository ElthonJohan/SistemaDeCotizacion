﻿@using System.Security.Claims
@{
    var rolUsuario = User.FindFirstValue(ClaimTypes.Role);
}

<!DOCTYPE html>
<html lang="es" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - TodoCamiones</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        :root {
            --main-bg: #fff;
            --main-text: #000;
        }

        [data-bs-theme="dark"] {
            --main-bg: #121212;
            --main-text: #ffffff;
            background-color: var(--main-bg) !important;
            color: var(--main-text) !important;
        }

        body {
            background-color: var(--main-bg);
            color: var(--main-text);
        }

        .navbar-dark-mode {
            background-color: #212529 !important;
        }

        .form-check-input:checked {
            background-color: #000;
            border-color: #000;
        }

        .navbar .nav-link,
        .navbar .navbar-brand {
            color: var(--main-text) !important;
        }

        [data-bs-theme="dark"] .navbar .nav-link,
        [data-bs-theme="dark"] .navbar .navbar-brand {
            color: #ffffff !important;
        }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light border-bottom shadow-sm px-4 py-2" id="mainNavbar">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-dark" asp-controller="Home" asp-action="Index">TodoCamiones</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (rolUsuario == "admin")
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Usuario" asp-action="Mostrar">Usuarios</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Rol" asp-action="Mostrar">Roles</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Cliente" asp-action="Mostrar">Clientes</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Vehiculo" asp-action="Mostrar">Vehículos</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Servicio" asp-action="Mostrar">Servicios</a></li>
                        }
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Salir">Salir</a></li>
                        }
                    </ul>

                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="darkModeSwitch" />
                        <label class="form-check-label" for="darkModeSwitch">Modo Oscuro</label>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-center border-top py-3">
        <div class="container text-muted">
            &copy; 2025 - TodoCamiones - <a asp-controller="Home" asp-action="Privacy">Privacidad</a>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const htmlEl = document.documentElement;
        const switchInput = document.getElementById("darkModeSwitch");

        // Inicializar tema
        const currentTheme = localStorage.getItem("theme") || "light";
        htmlEl.setAttribute("data-bs-theme", currentTheme);
        switchInput.checked = currentTheme === "dark";

        // Toggle del switch
        switchInput.addEventListener("change", () => {
            const newTheme = switchInput.checked ? "dark" : "light";
            htmlEl.setAttribute("data-bs-theme", newTheme);
            localStorage.setItem("theme", newTheme);
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>