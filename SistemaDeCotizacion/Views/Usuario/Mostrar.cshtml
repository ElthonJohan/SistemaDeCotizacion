@model List<SistemaDeCotizacion.Models.Usuario>

@{
    ViewData["Title"] = "Lista de Usuarios";
    Layout = "_Layout";
}

@if (TempData["mensaje"] != null)
{
    <div class="alerta-temporal alert alert-success text-center">
        @TempData["mensaje"]
    </div>
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="fw-bold text-primary">Gestión de Usuarios</h3>
                <a asp-controller="Usuario" asp-action="Nuevo" class="btn btn-dark">Registrar Nuevo Usuario</a>
            </div>

            <form asp-action="Mostrar" method="get" class="mb-4">
                <div class="input-group">
                    <input type="text" name="busqueda" value="@(Context.Request.Query["busqueda"])" class="form-control" placeholder="Buscar por nombre, apellido, rol o DNI..." />
                    <button type="submit" class="btn btn-dark">Buscar</button>
                </div>
            </form>

            @if (!Model.Any())
            {
                <div class="alert alert-secondary text-center">
                    No hay usuarios registrados actualmente.
                </div>
            }
            else
            {
                <div class="table-responsive shadow-sm border rounded">
                    <table class="table table-hover mb-0">
                        <thead class="table-dark text-white">
                            <tr>
                                <th>ID</th>
                                <th>Nombre</th>
                                <th>Apellido</th>
                                <th>Número de celular</th>
                                <th>DNI</th>
                                <th>Estado</th>
                                <th>Correo</th>
                                <th>Contraseña</th>
                                <th>Rol</th>
                                <th>Fecha de registro</th>
                                <th>Fecha de nacimiento</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody class="table-light">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.usuario_id</td>
                                    <td>@item.nombre</td>
                                    <td>@item.apellido</td>
                                    <td>@item.num_cel</td>
                                    <td>@item.dni</td>
                                    <td>@item.estado</td>
                                    <td>@item.correo</td>
                                    <td>
                                        <span class="text-muted">********</span>
                                    </td>
                                    <td>@item.rol?.rol_nombre</td>
                                    <td>@item.fecha_registro.ToString("dd-MM-yyyy")</td>
                                    <td>@item.fecha_nacimiento.ToString("dd-MM-yyyy")</td>
                                    <td class="text-center">
                                        <a asp-controller="Usuario" asp-action="Editar" asp-route-id="@item.usuario_id" class="btn btn-sm btn-outline-dark me-2">Editar</a>
                                        <a asp-controller="Usuario" asp-action="Eliminar" asp-route-id="@item.usuario_id" class="btn btn-sm btn-outline-danger">Eliminar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }

            @* @if (TempData["mensaje"] != null)
            {
                <div class="alert alert-success text-center">
                    @TempData["mensaje"]
                </div>
            } *@
        </div>
    </div>
</div>

<style>
    .fade-out {
        opacity: 0;
        transition: opacity 0.5s ease-out;
    }
</style>

<script>
    setTimeout(function () {
        document.querySelectorAll('.alerta-temporal').forEach(alerta => {
            alerta.classList.add('fade-out');
            setTimeout(() => alerta.style.display = 'none', 500);
        });
    }, 3000);
</script>