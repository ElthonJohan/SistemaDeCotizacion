@model List<SistemaDeCotizacion.Models.Usuario>

@{
    ViewData["Title"] = "Lista de Usuarios";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="fw-bold text-dark">Gestión de Usuarios</h3>
                <a asp-controller="Usuario" asp-action="Nuevo" class="btn btn-dark">Registrar Nuevo Usuario</a>
            </div>

            @if (!Model.Any())
            {
                <div class="alert alert-secondary text-center">
                    No hay usuarios registrados actualmente.
                </div>
            }
            else
            {
                <div class="table-responsive shadow-sm border rounded">
                    <table class="table table-hover mb-0">
                        <thead class="table-dark text-white">
                            <tr>
                                <th>ID</th>
                                <th>Nombre</th>
                                <th>Apellido</th>
                                <th>Correo</th>
                                <th>Contraseña</th>
                                <th>Rol</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody class="table-light">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.usuario_id</td>
                                    <td>@item.nombre</td>
                                    <td>@item.apellido</td>
                                    <td>@item.correo</td>
                                    <td>
                                        <span class="text-muted">********</span>
                                    </td>
                                    <td>@item.rol?.rol_nombre</td>
                                    <td class="text-center">
                                        <a asp-controller="Usuario" asp-action="Editar" asp-route-id="@item.usuario_id" class="btn btn-sm btn-outline-dark me-2">Editar</a>
                                        <a asp-controller="Usuario" asp-action="Eliminar" asp-route-id="@item.usuario_id" class="btn btn-sm btn-outline-danger">Eliminar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>