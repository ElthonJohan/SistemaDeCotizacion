@model SistemaDeCotizacion.Models.Vehiculo

@{
    ViewData["Title"] = "Nuevo Vehículo";
    var clientes = ViewData["Clientes"] as List<SistemaDeCotizacion.Models.Cliente>;
}

<h2>Nuevo Vehículo</h2>

@if (ViewData["mensaje"] != null)
{
    <div class="alert alert-danger">@ViewData["mensaje"]</div>
}

<form asp-action="Nuevo" method="post">
    <div class="form-group">
        <label>Placa</label>
        <input asp-for="placa" class="form-control" />
    </div>
    <div class="form-group">
        <label>Marca</label>
        <input asp-for="marca" class="form-control" />
    </div>
    <div class="form-group">
        <label>Modelo</label>
        <input asp-for="modelo" class="form-control" />
    </div>
    <div class="form-group">
        <label>Kilometraje</label>
        <input asp-for="kilometraje" class="form-control" type="number" />
    </div>
    <div class="form-group">
        <label>Cliente</label>
        <select asp-for="cliente_id" class="form-control">
            <option value="">Seleccione un cliente</option>
            @foreach (var c in clientes)
            {
                <option value="@c.cliente_id">@c.nombre_cliente (@c.ruc)</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Mostrar" class="btn btn-secondary">Cancelar</a>
</form>