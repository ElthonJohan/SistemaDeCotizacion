@model SistemaDeCotizacion.Models.Vehiculo
@{
    ViewData["Title"] = "Editar Vehiculo";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-0">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0">Editar Vehiculo</h4>
                </div>
                <div class="card-body bg-light">
                    @if (ViewData["mensaje"] != null)
                    {
                        <div class="alert alert-danger text-center">
                            @ViewData["mensaje"]
                        </div>
                    }

                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="vehiculo_id" />
    <div class="form-group">
        <label>Placa</label>
        <input asp-for="placa" class="form-control" />
    </div>
    <div class="form-group">
        <label>Marca</label>
        <input asp-for="marca" class="form-control" />
    </div>
    <div class="form-group">
        <label>Modelo</label>
        <input asp-for="modelo" class="form-control" />
    </div>
    <div class="form-group">
        <label>Kilometraje</label>
        <input asp-for="kilometraje" class="form-control" type="number" />
    </div>
    <div class="form-group">
        <label>Cliente</label>
        <select asp-for="cliente_id" class="form-control">
            <option value="">Seleccione un cliente</option>
            @foreach (var c in clientes)
            {
                var selected = c.cliente_id == Model.cliente_id ? "selected" : "";
                <option value="@c.cliente_id" selected>
                    @c.nombre_cliente (@c.ruc)
                </option>
            }
        </select>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}