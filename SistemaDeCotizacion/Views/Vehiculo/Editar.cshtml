@model SistemaDeCotizacion.Models.Vehiculo

@{
    ViewData["Title"] = "Editar Vehículo";
}

<h2>Editar Vehículo</h2>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="vehiculo_id" />

    <div class="form-group">
        <label>Modelo</label>
        <input asp-for="modelo" class="form-control" />
    </div>

    <div class="form-group">
        <label>Marca</label>
        <input asp-for="marca" class="form-control" />
    </div>

    <div class="form-group">
        <label>Placa</label>
        <input asp-for="placa" class="form-control" />
    </div>

    <div class="form-group">
        <label>Kilometraje</label>
        <input asp-for="kilometraje" type="number" class="form-control" />
    </div>

    <div class="form-group">
        <label>Cliente</label>
        <select asp-for="cliente_id" class="form-control" asp-items="@(new SelectList(ViewBag.Clientes, "cliente_id", "nombre_cliente", Model.cliente_id))">
            <option value="">-- Seleccione un cliente --</option>
        </select>
    </div>

    <br />
    <span class="text-danger">@ViewData["mensaje"]</span>

    <button type="submit" class="btn btn-primary">Guardar cambios</button>
    <a asp-action="Mostrar" class="btn btn-secondary">Cancelar</a>
</form>
