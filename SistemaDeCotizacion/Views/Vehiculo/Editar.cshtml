@model SistemaDeCotizacion.Models.Vehiculo
@{
    ViewData["Title"] = "Editar Vehiculo";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-0">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0">Editar Vehiculo</h4>
                </div>
                <div class="card-body bg-light">
                    @if (ViewData["mensaje"] != null)
                    {
                        <div class="alert alert-danger text-center">
                            @ViewData["mensaje"]
                        </div>
                    }

                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <form asp-action="Editar" asp-controller="Vehiculo" method="post">
                        <input asp-for="vehiculo_id" type="hidden" />

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="modelo" class="form-label">Modelo del Vehículo</label>
                                <input asp-for="modelo" class="form-control" placeholder="Modelo del Vehículo" required />
                                <span asp-validation-for="modelo" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="marca" class="form-label">Marca del Vehículo</label>
                                <input asp-for="marca" class="form-control" placeholder="Marca del Vehículo" required />
                                <span asp-validation-for="marca" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="placa" class="form-label">Placa del Vehículo</label>
                                <input asp-for="placa" class="form-control" placeholder="Placa del Vehículo" required />
                                <span asp-validation-for="placa" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="kilometraje" class="form-label">Kilometraje del Vehículo</label>
                                <input asp-for="kilometraje" class="form-control" type="number" placeholder="Ejm. 20000" required />
                                <span asp-validation-for="kilometraje" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="cliente_id" class="form-label fw-semibold">Cliente</label>
                                <select asp-for="cliente_id" class="form-select" required>
                                    <option value="">Selecciona un cliente</option>
                                    @foreach (var cliente in ViewBag.Clientes as List<SistemaDeCotizacion.Models.Cliente>)
                                    {
                                        <option value="@cliente.cliente_id">@cliente.nombre_cliente</option>
                                    }
                                </select>
                                <span asp-validation-for="cliente_id" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a asp-action="Mostrar" class="btn btn-outline-dark">Volver</a>
                            <button type="submit" class="btn btn-dark">Guardar Cambios</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}