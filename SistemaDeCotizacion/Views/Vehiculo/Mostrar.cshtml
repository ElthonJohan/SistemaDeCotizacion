@model List<SistemaDeCotizacion.Models.Vehiculo>

@{
    ViewData["Title"] = "Lista de Vehículos";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="fw-bold text-dark">Gestión de Vehículos</h3>
                <a asp-controller="Vehiculo" asp-action="Nuevo" class="btn btn-dark">Registrar Nuevo Vehículo</a>
            </div>

            @if (!Model.Any())
            {
                <div class="alert alert-secondary text-center">
                    No hay vehículos registrados actualmente.
                </div>
            }
            else
            {
                <div class="table-responsive shadow-sm border rounded">
                    <table class="table table-hover mb-0">
                        <thead class="table-dark text-white">
                            <tr>
                                <th>Modelo</th>
                                <th>Marca</th>
                                <th>Placa</th>
                                <th>Fecha Registro</th>
                                <th>Kilometraje</th>
                                <th>Cliente</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody class="table-light">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.modelo</td>
                                    <td>@item.marca</td>
                                    <td>@item.placa</td>
                                    <td>@item.fecha_registro_vehiculo.ToString("yyyy-MM-dd")</td>
                                    <td>@item.kilometraje</td>
                                    <td>@item.cliente.nombre_cliente</td>
                                    <td class="text-center">
                                        <a asp-controller="Vehiculo" asp-action="Editar" asp-route-id="@item.vehiculo_id" class="btn btn-sm btn-outline-dark me-2">Editar</a>
                                        <a asp-controller="Vehiculo" asp-action="Eliminar" asp-route-id="@item.vehiculo_id" class="btn btn-sm btn-outline-danger">Eliminar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
