@model SistemaDeCotizacion.Models.Servicio
@{
    ViewData["Title"] = "Editar Servicio";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-0">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0">Editar Servicio</h4>
                </div>
                <div class="card-body bg-light">
                    @if (ViewData["mensaje"] != null)
                    {
                        <div class="alert alert-danger text-center">
                            @ViewData["mensaje"]
                        </div>
                    }

                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <form asp-action="Editar" asp-controller="Servicio" method="post">
                        <input asp-for="servicio_id" type="hidden" />

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="nombre_servicio" class="form-label">Nombre del Servicio</label>
                                <input asp-for="nombre_servicio" class="form-control" placeholder="Nombre del Servicio" required />
                                <span asp-validation-for="nombre_servicio" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="precio" class="form-label">Precio del Servicio (S/.)</label>
                                <input asp-for="precio" class="form-control" type="number" placeholder="Precio del Servicio (S/.)" required />
                                <span asp-validation-for="precio" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a asp-action="Mostrar" class="btn btn-outline-dark">Volver</a>
                            <button type="submit" class="btn btn-dark">Guardar Cambios</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}