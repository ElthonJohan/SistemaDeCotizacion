@model List<SistemaDeCotizacion.Models.Servicio>

@{
    ViewData["Title"] = "Lista de Servicios";
    Layout = "_Layout";
}

@if (TempData["mensaje"] != null)
{
    <div class="alerta-temporal alert alert-success text-center">
        @TempData["mensaje"]
    </div>
}


<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="fw-bold text-primary">Gestión de Servicios</h3>
                <a asp-controller="Servicio" asp-action="Nuevo" class="btn btn-dark">Registrar Nuevo Servicio</a>
            </div>

            <form asp-action="Mostrar" method="get" class="mb-4">
                <div class="input-group">
                    <input type="text" name="busqueda" value="@(Context.Request.Query["busqueda"])" class="form-control" placeholder="Buscar por nombre..." />
                    <button type="submit" class="btn btn-dark">Buscar</button>
                </div>
            </form>

            @if (!Model.Any())
            {
                <div class="alert alert-secondary text-center">
                    No hay servicios registrados actualmente.
                </div>
            }
            else
            {
                <div class="table-responsive shadow-sm border rounded">
                    <table class="table table-hover mb-0">
                        <thead class="table-dark text-white">
                            <tr>
                                <th>Nombre del Servicio</th>
                                <th>Precio (S/.)</th>
                                <th>Fecha de Registro</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody class="table-light">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.nombre_servicio</td>
                                    <td>@item.precio</td>
                                    <td>@item.fecha_registro_servicio.ToString("dd-MM-yyyy")</td>
                                    <td class="text-center">
                                        <a asp-controller="Servicio" asp-action="Editar" asp-route-id="@item.servicio_id" class="btn btn-sm btn-outline-dark me-2">Editar</a>
                                        <a asp-controller="Servicio" asp-action="Eliminar" asp-route-id="@item.servicio_id" class="btn btn-sm btn-outline-danger">Eliminar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .fade-out {
        opacity: 0;
        transition: opacity 0.5s ease-out;
    }
</style>

<script>
    setTimeout(function () {
        document.querySelectorAll('.alerta-temporal').forEach(alerta => {
            alerta.classList.add('fade-out');
            setTimeout(() => alerta.style.display = 'none', 500);
        });
    }, 3000);
</script>