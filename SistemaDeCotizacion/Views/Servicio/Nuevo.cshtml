@model SistemaDeCotizacion.Models.Servicio

@{
    ViewData["Title"] = "Nuevo Servicio";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0">Registrar Servicio</h4>
                </div>
                <div class="card-body bg-light">

                    @if (ViewData["mensaje"] != null)
                    {
                        <div class="alert alert-danger text-center">
                            @ViewData["mensaje"]
                        </div>
                    }

                    <form asp-action="Nuevo" method="post">
                        <div class="row g-3">

                            <div class="col-md-6">
                                <label asp-for="nombre_servicio" class="form-label fw-semibold">Nombre del Servicio</label>
                                <input asp-for="nombre_servicio" class="form-control" required />
                                <span asp-validation-for="nombre_servicio" class="text-danger"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="precio" class="form-label fw-semibold">Precio del Servicio (S/.)</label>
                                <input asp-for="precio" class="form-control" type="number" required oninput="this.value = this.value.replace(/[^0-9]/g, '');" />
                                <span asp-validation-for="precio" class="text-danger"></span>
                            </div>

                            <div class="d-flex justify-content-end gap-2 mt-4">
                                <a asp-action="Mostrar" class="btn btn-outline-dark">Cancelar</a>
                                <button type="submit" class="btn btn-dark px-4">Guardar</button>
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}