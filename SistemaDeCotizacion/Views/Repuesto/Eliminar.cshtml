@model SistemaDeCotizacion.Models.Repuesto

@{
    ViewData["Title"] = "Eliminar Repuesto";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow border-0">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Confirmar Eliminación</h5>
                </div>
                <div class="card-body bg-light">
                    <p class="fs-5">
                        ¿Estás seguro que deseas eliminar el repuesto con el código
                        <strong class="text-dark">@Model.codigo_rep</strong>?
                    </p>

                    <dl class="row mb-4">
                        <dt class="col-sm-4">Descripción:</dt>
                        <dd class="col-sm-8">@Model.descripcion</dd>
                    </dl>
                    
                    <dl class="row mb-4">
                        <dt class="col-sm-4">Precio (S/.):</dt>
                        <dd class="col-sm-8">@Model.precio_und</dd>
                    </dl>

                    <form asp-controller="Repuesto" asp-action="ConfirmacionEliminar" method="post">
                        <input type="hidden" name="id" value="@Model.repuesto_id" />

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-controller="Repuesto" asp-action="Mostrar" class="btn btn-outline-dark">Cancelar</a>
                            <button type="submit" class="btn btn-danger">Eliminar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>