@model List<SistemaDeCotizacion.Models.Repuesto>

@{
    ViewData["Title"] = "Lista de Repuestos";
    Layout = "_Layout";
}

@if (TempData["error"] != null)
{
    <div class="alerta-temporal alert alert-danger text-center">
        @TempData["error"]
    </div>
}
@if (TempData["mensaje"] != null)
{
    <div class="alerta-temporal alert alert-success text-center">
        @TempData["mensaje"]
    </div>
}


<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="fw-bold text-primary">Gestión de Repuestos</h3>
                <a asp-controller="Repuesto" asp-action="Nuevo" class="btn btn-dark">Registrar Nuevo Repuesto</a>
            </div>

            <form asp-action="Mostrar" method="get" class="mb-4">
                <div class="input-group">
                    <input type="text" name="busqueda" value="@(Context.Request.Query["busqueda"])" class="form-control" placeholder="Buscar por código o descripción..." />
                    <button type="submit" class="btn btn-dark">Buscar</button>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-3">
                        <select asp-items="ViewBag.Meses" name="mes" class="form-select">
                            <option value="">-- Seleccionar mes --</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <input type="number" name="anio" value="@(ViewBag.AnioSeleccionado ?? DateTime.Now.Year)" class="form-control" placeholder="Año" />
                    </div>
                </div>
            </form>

            @if (!Model.Any())
            {
                <div class="alert alert-secondary text-center">
                    No hay repuestos registrados actualmente.
                </div>
            }
            else
            {
                <div class="table-responsive shadow-sm border rounded">
                    <table class="table table-hover mb-0">
                        <thead class="table-dark text-white">
                            <tr>
                                <th>Código</th>
                                <th>Descripción</th>
                                <th>Stock</th>
                                <th>Medida</th>
                                <th>Precio unidad (S/.)</th>
                                <th>Fecha de Registro</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody class="table-light">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.codigo_rep</td>
                                    <td>@item.descripcion</td>
                                    <td>@item.stock</td>
                                    <td>@item.medida_rep</td>
                                    <td>@item.precio_und</td>
                                    <td>@item.fecha_registro_repuesto.ToString("dd-MM-yyyy")</td>
                                    <td class="text-center">
                                        <a asp-controller="Repuesto" asp-action="Editar" asp-route-id="@item.repuesto_id" class="btn btn-sm btn-outline-dark me-2">Editar</a>
                                        <a asp-controller="Repuesto" asp-action="Eliminar" asp-route-id="@item.repuesto_id" class="btn btn-sm btn-outline-danger">Eliminar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .fade-out {
        opacity: 0;
        transition: opacity 0.5s ease-out;
    }
</style>

<script>
    setTimeout(function () {
        document.querySelectorAll('.alerta-temporal.alert-danger').forEach(alerta => {
            alerta.classList.add('fade-out');
            setTimeout(() => alerta.style.display = 'none', 500);
        });
    }, 5000);

    setTimeout(function () {
        document.querySelectorAll('.alerta-temporal.alert-success').forEach(alerta => {
            alerta.classList.add('fade-out');
            setTimeout(() => alerta.style.display = 'none', 500);
        });
    }, 3000);
</script>