@model SistemaDeCotizacion.Models.Rol
@{
    ViewData["Title"] = "Editar Rol";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-0">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0">Editar Rol</h4>
                </div>
                <div class="card-body bg-light">
                    @if (ViewData["mensaje"] != null)
                    {
                        <div class="alert alert-danger text-center">
                            @ViewData["mensaje"]
                        </div>
                    }

                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <form asp-action="Editar" asp-controller="Rol" method="post">
                        <input asp-for="rol_id" type="hidden" />

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="rol_nombre" class="form-label">Nombre del Rol</label>
                                <input asp-for="rol_nombre" class="form-control" placeholder="Nombre del Rol" required />
                                <span asp-validation-for="rol_nombre" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="rol_descripcion" class="form-label">Descripción del Rol</label>
                                <input asp-for="rol_descripcion" class="form-control" placeholder="Descripción del Rol" required />
                                <span asp-validation-for="rol_descripcion" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a asp-action="Mostrar" class="btn btn-outline-dark">Volver</a>
                            <button type="submit" class="btn btn-dark">Guardar Cambios</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}