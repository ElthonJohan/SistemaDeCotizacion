@model SistemaDeCotizacion.Models.Cotizacion

@{
    ViewData["Title"] = "Eliminar Cotización";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow border-0">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Confirmar Eliminación</h5>
                </div>
                <div class="card-body bg-light">
                    <p class="fs-5">
                        ¿Estás seguro que deseas eliminar la cotización
                        <strong class="text-dark">ID: @Model.cotizacion_id</strong>?
                    </p>

                    <dl class="row mb-4">
                        <dt class="col-sm-4">Nombre Cliente:</dt>
                        <dd class="col-sm-8">@Model.cliente.nombre_cliente</dd>
                        <dt class="col-sm-4">RUC/DNI:</dt>
                        <dd class="col-sm-8">@Model.cliente.ruc</dd>
                        <dt class="col-sm-4">Estado:</dt>
                        <dd class="col-sm-8">@Model.estado_cotizacion</dd>
                        <dt class="col-sm-4">Costo Total Servicios:</dt>
                        <dd class="col-sm-8">@Model.costo_servicio_total</dd>
                        <dt class="col-sm-4">Costo Total Repuestos:</dt>
                        <dd class="col-sm-8">@Model.costo_repuesto_total</dd>
                        <dt class="col-sm-4">Fecha de Registro:</dt>
                        <dd class="col-sm-8">@Model.fecha_cotizacion</dd>
                    </dl>

                    <form asp-controller="Cotizacion" asp-action="ConfirmacionEliminar" method="post">
                        <input type="hidden" name="id" value="@Model.cotizacion_id" />

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-controller="Cotizacion" asp-action="Mostrar" class="btn btn-outline-dark">Cancelar</a>
                            <button type="submit" class="btn btn-danger">Eliminar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>