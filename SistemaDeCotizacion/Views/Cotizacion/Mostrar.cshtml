@model List<SistemaDeCotizacion.Models.Cotizacion>

@{
    ViewData["Title"] = "Lista de Cotizaciones";
    Layout = "_Layout";
}

@if (TempData["mensaje"] != null)
{
    <div class="alerta-temporal alert alert-success text-center">
        @TempData["mensaje"]
    </div>
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="fw-bold text-primary">Gestión de Cotizaciones</h3>
                <a asp-controller="Cotizacion" asp-action="Nuevo" class="btn btn-dark">Registrar Nueva Cotización</a>
            </div>

            <form asp-action="Mostrar" method="get" class="mb-4">
                <div class="input-group">
                    <input type="text" name="busqueda" value="@(Context.Request.Query["busqueda"])" class="form-control" placeholder="Buscar por nombre o RUC/DNI del cliente" />
                    <button type="submit" class="btn btn-dark">Buscar</button>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-3">
                        <select asp-items="ViewBag.Meses" name="mes" class="form-select">
                            <option value="">-- Seleccionar mes --</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <input type="number" name="anio" value="@(ViewBag.AnioSeleccionado ?? DateTime.Now.Year)" class="form-control" placeholder="Año" />
                    </div>
                </div>
            </form>

            @if (!Model.Any())
            {
                <div class="alert alert-secondary text-center">
                    No hay cotizaciones registradas actualmente.
                </div>
            }
            else
            {
                <div class="table-responsive shadow-sm border rounded">
                    <table class="table table-hover mb-0">
                        <thead class="table-dark text-white">
                            <tr>
                                <th>ID</th>
                                <th>Nombre del Cliente</th>
                                <th>RUC/DNI del Cliente</th>
                                <th>Fecha de registro</th>
                                <th>Estado</th>
                                <th>Costo total del Servicio (S/.)</th>
                                <th>Costo total del Repuesto (S/.)</th>
                                <th>Costo total (S/.)</th>
                                <th class="text-center">Acciones</th>
								<th class="text-center">Generar PDF</th>
                            </tr>
                        </thead>
                        <tbody class="table-light">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.cotizacion_id</td>
                                    <td>@item.cliente?.nombre_cliente</td>
                                    <td>@item.cliente?.ruc</td>
                                    <td>@item.fecha_cotizacion.ToString("dd-MM-yyyy")</td>
                                    <td>@item.estado_cotizacion</td>
                                    <td>@item.costo_servicio_total</td>
                                    <td>@item.costo_repuesto_total</td>
                                    <td>@(item.costo_repuesto_total + item.costo_servicio_total)</td>
                                    <td class="text-center">
                                        <a asp-controller="Cotizacion" asp-action="Editar" asp-route-id="@item.cotizacion_id" class="btn btn-sm btn-outline-dark me-2">Editar</a>
                                        <a asp-controller="Cotizacion" asp-action="Eliminar" asp-route-id="@item.cotizacion_id" class="btn btn-sm btn-outline-danger">Eliminar</a>
                                    </td>
                                    <td class="text-center">
                                        <a class="btn btn-primary"
                                           asp-controller="PDFConverter"
                                           asp-action="GenerarPDFCotizacion"
                                           asp-route-id="@item.cotizacion_id"
                                           target="_blank"
                                           rel="noopener noreferrer">
                                            <i class="bi bi-file-earmark-pdf"></i> Ver PDF
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .fade-out {
        opacity: 0;
        transition: opacity 0.5s ease-out;
    }
</style>

<script>
    setTimeout(function () {
        document.querySelectorAll('.alerta-temporal').forEach(alerta => {
            alerta.classList.add('fade-out');
            setTimeout(() => alerta.style.display = 'none', 500);
        });
    }, 3000);
</script>