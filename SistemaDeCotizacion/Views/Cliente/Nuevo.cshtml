@model SistemaDeCotizacion.Models.Cliente
@{
    ViewData["Title"] = "Nuevo Cliente";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-0">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0">Registrar Nuevo Cliente</h4>
                </div>
                <div class="card-body bg-light">

                    @if (ViewData["mensaje"] != null)
                    {
                        <div class="alert alert-danger text-center">
                            @ViewData["mensaje"]
                        </div>
                    }

                    <form asp-action="Nuevo" asp-controller="Cliente" method="post">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="nombre_cliente" class="form-label">Nombre</label>
                                <input asp-for="nombre_cliente" class="form-control" placeholder="Nombre" required />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ruc" class="form-label">RUC/DNI</label>
                                <input asp-for="ruc" class="form-control" type="text" pattern="\d+" placeholder="RUC/DNI" required />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="correo_cliente" class="form-label">Correo</label>
                                <input asp-for="correo_cliente" class="form-control" type="email" placeholder="Correo electrónico" required />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="direccion_cliente" class="form-label">Dirección</label>
                                <input asp-for="direccion_cliente" class="form-control" placeholder="Jr./Av..." required />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="telefono_cliente" class="form-label">Teléfono</label>
                                <input asp-for="telefono_cliente" class="form-control" type="number" placeholder="Número de contacto" required />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="tipo" class="form-label fw-semibold">Tipo</label>
                                <select asp-for="tipo" class="form-select">
                                    <option value="Persona Natural">Persona Natural</option>
                                    <option value="Persona Jurídica">Persona Jurídica</option>
                                </select>
                                <span asp-validation-for="tipo" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a asp-controller="Cliente" asp-action="Mostrar" class="btn btn-outline-dark">Volver</a>
                            <button type="submit" class="btn btn-dark">Guardar</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>