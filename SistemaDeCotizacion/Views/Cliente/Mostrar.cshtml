@model List<SistemaDeCotizacion.Models.Cliente>

@{
    ViewData["Title"] = "Lista de Clientes";
    Layout = "_Layout";
}

@if (TempData["mensaje"] != null)
{
    <div id="alerta-exito" class="alert alert-success text-center">
        @TempData["mensaje"]
    </div>
    <script>
        setTimeout(function () {
            var alerta = document.getElementById('alerta-exito');
            if (alerta) {
                alerta.style.display = 'none';
            }
        }, 3000); // 3000 ms = 3 segundos
    </script>
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="fw-bold text-primary">Gestión de Clientes</h3>
                <a asp-controller="Cliente" asp-action="Nuevo" class="btn btn-dark">Registrar Nuevo Cliente</a>
            </div>
            <form asp-action="Mostrar" method="get" class="mb-4">
                <div class="input-group">
                    <input type="text" name="busqueda" value="@(Context.Request.Query["busqueda"])" class="form-control" placeholder="Buscar por nombre o RUC/DNI..." />
                    <button type="submit" class="btn btn-dark">Buscar</button>
                </div>
            </form>
            @if (!Model.Any())
            {
                <div class="alert alert-secondary text-center">
                    No hay clientes registrados actualmente.
                </div>
            }
            else
            {
                <div class="table-responsive shadow-sm border rounded">
                    <table class="table table-hover mb-0">
                        <thead class="table-dark text-white">
                            <tr>
                                <th>ID</th>
                                <th>Nombre</th>
                                <th>RUC/DNI</th>
                                <th>Correo</th>
                                <th>Dirección</th>
                                <th>Teléfono</th>
                                <th>Tipo</th>
                                <th>Fecha de Registro</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody class="table-light">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.cliente_id</td>
                                    <td>@item.nombre_cliente</td>
                                    <td>@item.ruc</td>
                                    <td>@item.correo_cliente</td>
                                    <td>@item.direccion_cliente</td>
                                    <td>@item.telefono_cliente</td>
                                    <td>@item.tipo</td>
                                    <td>@item.fecha_registro_cliente.ToString("dd-MM-yyyy")</td>
                                    <td class="text-center">
                                        <a asp-controller="Cliente" asp-action="Editar" asp-route-id="@item.cliente_id" class="btn btn-sm btn-outline-dark me-2">Editar</a>
                                        <a asp-controller="Cliente" asp-action="Eliminar" asp-route-id="@item.cliente_id" class="btn btn-sm btn-outline-danger">Eliminar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

